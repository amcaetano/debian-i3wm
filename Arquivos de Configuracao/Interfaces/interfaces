#---------------------- Configuração de endereço ip estático - Rede wifi casa -----------------#

allow-hotplug wlp3s0 
  iface wlp3s0 inet static
  address 192.168.5.7 
  broadcast 192.168.5.255
  netmask 255.255.255.0
  gateway 192.168.5.1
  dns-nameservers 8.8.8.8 8.8.4.4
  wpa-ssid rede
  wpa-psk  admin


